<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>test-sso</display-name>
    <servlet>
        <servlet-name>TestSSO</servlet-name>
        <servlet-class>org.xwiki.test.sso.TestSSO</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LDAPStatus</servlet-name>
        <servlet-class>org.xwiki.test.sso.LDAPStatus</servlet-class>
        <init-param>
            <param-name>xwiki.cfg</param-name>
            <param-value>/usr/local/xwiki/WEB-INF/xwiki.cfg</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>GetHeaders</servlet-name>
        <servlet-class>org.xwiki.test.sso.GetHeaders</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TestSSO</servlet-name>
        <url-pattern>/</url-pattern>         
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TestSSO</servlet-name>
        <url-pattern>/TestSSO</url-pattern>         
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LDAPStatus</servlet-name>
        <url-pattern>/LDAPStatus</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetHeaders</servlet-name>
        <url-pattern>/GetHeaders</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>/</welcome-file>
    </welcome-file-list>
</web-app>
